{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "src/*": ["./src/*"],
      "routes/*": ["./src/routes/*"],
      "controllers/*": ["./src/controllers/*"],
      "utils/*": ["./src/utils/*"],
      "models/*": ["./src/models/*"]
    }
  }
}
